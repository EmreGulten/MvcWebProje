@model MvcWebProje.Models.Model.Admin

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="Refresh" content="5;url=/Admin/Index" />
    <title>Sifremi Unuttum</title>

    <link href="~/Content/AdminLayout/css/bootstrap.min.css" rel="stylesheet">
    <!-- bootstrap theme -->
    <link href="~/Content/AdminLayout/css/bootstrap-theme.css" rel="stylesheet">
    <!--external css-->
    <!-- font icon -->
    <link href="~/Content/AdminLayout/css/elegant-icons-style.css" rel="stylesheet" />
    <link href="~/Content/AdminLayout/css/font-awesome.css" rel="stylesheet" />
    <!-- Custom styles -->
    <link href="~/Content/AdminLayout/css/style.css" rel="stylesheet">
    <link href="~/Content/AdminLayout/css/style-responsive.css" rel="stylesheet" />
</head>
<body onload="stopwatch()">

    @using (Html.BeginForm("SifremiUnuttum", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Admin</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Eposta, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Eposta, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Eposta, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Şifre Sıfırla" class="btn btn-default" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @if (ViewBag.D == "a")
                    {
                        <p class="alert alert-info">@ViewBag.uyari</p>
                        <p class="alert alert-info"><span id="time">5</span>saniye sonra yönlendirileceksiniz.</p>
                    }

                    <script type="text/javascript">

                    var time = 5;
                    @if (ViewBag.D == "a")
                    {
                        <text>
                        function stopwatch() {
                        setInterval(() => {
                                time = (time > 1 ? time - 1 : 1);
                                document.getElementById('time').innerText = time;
                            },
                            1000);
                    }

                        </text>
                    }


                    </script>
                </div>
            </div>
        </div>
    }
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">

            @Html.ActionLink("Geri Dön", "Index",null,new {@class="btn btn-default"})
        </div>
    </div>
</body>
</html>

