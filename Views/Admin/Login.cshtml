
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Admin Paneli</title>
    <!-- Bootstrap CSS -->
    <link href="~/Content/AdminLayout/css/bootstrap.min.css" rel="stylesheet">
    <!-- bootstrap theme -->
    <link href="~/Content/AdminLayout/css/bootstrap-theme.css" rel="stylesheet">
    <!--external css-->
    <!-- font icon -->
    <link href="~/Content/AdminLayout/css/elegant-icons-style.css" rel="stylesheet" />
    <link href="~/Content/AdminLayout/css/font-awesome.css" rel="stylesheet" />
    <!-- Custom styles -->
    <link href="~/Content/AdminLayout/css/style.css" rel="stylesheet">
    <link href="~/Content/AdminLayout/css/style-responsive.css" rel="stylesheet" />
</head>
<body>
<div>
    <form class="login-form" action="/Admin/Login/" method="post" enctype="multipart/form-data">
        <div class="login-wrap">
            @if (Session["adminid"] == null)
            {
                <p class="alert">@ViewBag.uyari</p>
            }

            <p class="login-img"><i class="icon_lock_alt"></i></p>
            <div class="input-group">
                <span class="input-group-addon"><i class="icon_profile"></i></span>
                <input type="text" class="form-control" placeholder="E-mail" autofocus name="Eposta">
            </div>
            <div class="input-group">
                <span class="input-group-addon"><i class="icon_key_alt"></i></span>
                <input type="password" class="form-control" placeholder="Password" name="Sifre">
            </div>

            <button class="btn btn-info btn-lg btn-block" type="submit">Giriş Yap</button>
            <a class="btn btn-info btn-lg btn-block" href="/Admin/SifremiUnuttum/">Şifremi Unuttum</a>
        </div>
    </form>
</div>
</body>
</html>
