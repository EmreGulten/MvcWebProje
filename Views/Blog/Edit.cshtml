@model MvcWebProje.Models.Model.Blog
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout .cshtml";
}


<script type="text/javascript">
    CKEDITOR.replace('editor')
</script>

<h2>Güncelle</h2>


<div class="form">
   
    @using (Html.BeginForm("Edit", "Blog", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Başlık<span class="required">*</span></label>
            <div class="col-lg-10">
                <input class="form-control" id="Baslik" name="Baslik" minlength="5" type="text" required  value="@Model.Baslik"/>
            </div>
        </div>

        <div class="form-group ">
            <label for="cemail" class="control-label col-lg-2">Kategori <span class="required">*</span></label>
            <div class="col-lg-10">
                @Html.DropDownList("KategoriId", null, new { @class = "form-control"})
            </div>
        </div>

        <div class="form-group ">
            <label for="cemail" class="control-label col-lg-2">İçerik <span class="required">*</span></label>
            <div class="col-lg-10">
                <textarea class="ckeditor" name="Icerik">@Model.Icerik</textarea>
            </div>
        </div>

        <div class="form-group ">
            <label for="curl" class="control-label col-lg-2">Eski Resim</label>
            <div class="col-lg-10">
                <img src="@Model.ResimURL" width="100" height="100" />
            </div>
        </div>

        <div class="form-group ">
            <label for="curl" class="control-label col-lg-2">Resim</label>
            <div class="col-lg-10">
                <input class="form-control " id="ResimURL" type="file" name="ResimURL" accept=".jpg,.png,.jpeg" value="@Model.ResimURL"/>
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <button class="btn btn-primary" type="submit">Save</button>
                <button class="btn btn-default" type="button"><a href="/Blog/Index">Cancel</a></button>
            </div>
        </div>
    }
   
</div>

