@model IEnumerable<MvcWebProje.Models.Model.Hizmet>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout .cshtml";
}

<h2>Index</h2>
@Html.ActionLink("Yeni Hizmet Ekle","Create",null,new {@class="btn btn-default"})
<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>Resim URL</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.HizmetId</td>
                <td>@item.Baslik</td>
                <td>@Html.Raw(item.Aciklama)</td>
                <td><img width="100"  height="100" src="@item.ResimURL"/></td>
                <td>@Html.ActionLink("Güncelle","Edit",new {id = item.HizmetId}) | 
                @Html.ActionLink("Sil","Delete",new {id = item.HizmetId})
                    </td>
            </tr>

        }
    </tbody>
</table>